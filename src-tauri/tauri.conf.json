{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ObsidianIRC",
  "version": "../package.json",
  "identifier": "com.obsidianirc.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ObsidianIRC",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEUxNDk5NjkzQzZDQ0Q0NDAKUldSQTFNekdrNVpKNGVINXY3ekZ4blo3ZFJMK0d6WGpzalZWVFNRTENRTU9DbFgzTW1FRkJkRkcK",
      "endpoints": [
        "https://cdn.crabnebula.app/update/obsidianirc/obsidianirc/{{target}}/{{arch}}/{{current_version}}"
      ]
    }
  }
}
